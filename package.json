{
  "name": "bun-templates",
  "description": "Boilerplate for creating a TypeScript program with Bun.",
  "author": {
    "name": "Achmad F. Ibrahim",
    "email": "acfatah@gmail.com"
  },
  "workspaces": [
    "templates/*"
  ],
  "scripts": {
    "update:all": "bun scripts/update-all.ts",
    "outdated:all": "bun scripts/outdated-all.ts",
    "copy-common-to-templates": "bun scripts/copy-common-to-templates.ts",
    "lint": "scripts/lint-all.ts",
    "lint:changed": "scripts/lint-all.ts --changed",
    "lint:staged": "scripts/lint-all.ts --staged",
    "format": "scripts/lint-all.ts --fix",
    "format:changed": "scripts/lint-all.ts --fix --changed",
    "format:staged": "scripts/lint-all.ts --fix --staged",
    "typecheck": "bun scripts/typecheck-all.ts",
    "typecheck:tsgo": "bun scripts/typecheck-all.ts --tsgo",
    "precommit": "bun run lint:staged"
  },
  "peerDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251223.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@types/bun": "^1.3.5",
    "@types/common-tags": "^1.8.4",
    "bun-plugin-dts": "^0.3.0",
    "common-tags": "^1.8.2",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "jiti": "^2.6.1",
    "pathe": "^2.0.3",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bun precommit"
  }
}
